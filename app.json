{
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "ACCESS_TOKEN": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "VERIFY_TOKEN": {
      "required": true
    },
    "ANSIBLE_ROLES_PATH": {
      "required": true,
      "value": "ansible"
    },
    "FACEBOOK_APP_ID": {
      "required": true
    },
    "FACEBOOK_APP_SECRET": {
      "required": true
    }
  },
  "name": "mako",
  "repository": "https://github.com/mako-ai/mako",
  "scripts": {
    "postdeploy": "unset PYTHONHOME && unset PYTHONPATH && ansible-galaxy install mako-ai.messenger-bot-test-pipeline && cd $ANSIBLE_ROLES_PATH && ansible-playbook -i inventory site.yml"
  },
  "website": "https://mako-ai.github.io/"
}
