{
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "ACCESS_TOKEN": {
      "required": true
    },
    "ANSIBLE_ROLES_PATH": {
      "required": true,
      "value": "ansible"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "VERIFY_TOKEN": {
      "required": true
    }
  },
  "name": "mako",
  "repository": "https://github.com/mako-ai/mako",
  "scripts": {
    "postdeploy": "ansible-galaxy install -p \"$ANSIBLE_ROLES_PATH\" mako-ai.messenger-bot-test-pipeline && cd \"$ANSIBLE_ROLES_PATH\" && ansible-playbook -i inventory site.yml"
  },
  "website": "https://mako-ai.github.io/"
}
